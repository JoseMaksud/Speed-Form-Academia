@model SpeedFormAcademias.Models.Modalidade
@{
    ViewData["Title"] = "Modalidades";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-warning shadow-dark border-radius-lg pt-4 pb-3">
                    <h5 class="text-white text-capitalize ps-3 mb-0">@ViewData["Title"]</h5>
                    <h6 class="text-white text-capitalize ps-3">Alterar</h6>
                </div>
            </div>
            <div class="card-body pb-2">
                <form class="row" asp-action="Edit" method="POST" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id">
                    <div class="col-lg-9 col-md-7">
                        <div class="col-12 mb-4">
                            <div class="input-group input-group-outline">
                                <label asp-for="Nome" class="form-label"></label>
                                <input asp-for="Nome" class="form-control" />
                            </div>
                            <span asp-validation-for="Nome" class="text-danger text-sm"></span>
                        </div>
                        <div class="col-12 mb-4">
                            <div class="input-group input-group-outline">
                                <label asp-for="DescricaoPT1" class="form-label"></label>
                                <input asp-for="DescricaoPT1" class="form-control" />
                            </div>
                            <span asp-validation-for="DescricaoPT1" class="text-danger text-sm"></span>
                        </div>
                        <div class="col-12 mb-4">
                            <div class="input-group input-group-outline">
                                <label asp-for="DescricaoPT2" class="form-label"></label>
                                <input asp-for="DescricaoPT2" class="form-control" />
                            </div>
                            <span asp-validation-for="DescricaoPT2" class="text-danger text-sm"></span>
                        </div>
                        <div class="col-12 mb-4">
                            <div class="input-group input-group-outline">
                                <label asp-for="DescricaoPT3" class="form-label"></label>
                                <input asp-for="DescricaoPT3" class="form-control" />
                            </div>
                            <span asp-validation-for="DescricaoPT3" class="text-danger text-sm"></span>
                        </div>
                    </div>

                    <!-- Imagem 1 -->
                    <div class="col-lg-3 d-flex flex-column mb-3 cursor-pointer">
                        <img id="Preview1" src="~/@(Model.Imagem ?? Url.Content("~/img/sem-foto.jfif"))" class="w-100" alt="Foto" onclick="changeImage('NovaFoto1')">
                        <input type="hidden" asp-for="Imagem">
                        <input type="file" id="NovaFoto1" name="NovaFoto1" class="form-control" accept=".jpg,.jpeg,.png,.gif,.jfif" hidden onchange="updateImagePreview(this, 'Preview1')" />
                    </div>

                    <!-- Imagem 2 -->
                    <div class="col-lg-3 d-flex flex-column mb-3 cursor-pointer">
                        <img id="Preview2" src="~/@(Model.Imagem2 ?? Url.Content("~/img/sem-foto.jfif"))" class="w-100" alt="Foto" onclick="changeImage('NovaFoto2')">
                        <input type="hidden" asp-for="Imagem2">
                        <input type="file" id="NovaFoto2" name="NovaFoto2" class="form-control" accept=".jpg,.jpeg,.png,.gif,.jfif" hidden onchange="updateImagePreview(this, 'Preview2')" />
                    </div>

                    <div class="mb-3">
                        <input type="submit" value="Salvar" class="btn btn-success me-3" />
                        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
  .bg-gradient-warning {
    background: #F1C445 !important;  
  }
}
</style>

@section Scripts {
    <script>
        // Função para disparar o clique no input de arquivo correspondente ao id da imagem
        function changeImage(inputId) {
            document.getElementById(inputId).click();
        }

        // Função para atualizar o preview da imagem ao selecionar um arquivo
        function updateImagePreview(input, previewId) {
            if (input.files && input.files[0]) {
                var imgElement = document.getElementById(previewId);
                imgElement.src = URL.createObjectURL(input.files[0]);
            }
        }
    </script>
}
