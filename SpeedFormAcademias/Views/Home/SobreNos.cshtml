            <div class="carrossel-circle" data-year="2013" onclick="showContent('content-2013')"></div>
            <div class="carrossel-circle" data-year="2021" onclick="showContent('content-2021')"></div>
            <div class="carrossel-circle" data-year="2024" onclick="showContent('content-2024')"></div>
            <div class="carrossel-linha"></div>
        </div>

