@model SpeedFormAcademias.Models.Unidade

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-warning shadow-dark border-radius-lg pt-4 pb-3">
                    <h5 class="text-white text-capitalize ps-3 mb-0">@ViewData["Title"]</h5>
                    <h6 class="text-white text-capitalize ps-3">Detalhes</h6>
                </div>
            </div>
            <div class="card-body pb-2">
                <div class="row">
                    <div class="col-lg-8 col-md-9">
                        <div class="col-12 mb-3">
                            <div class="input-group input-group-outline mb-4">
                                <label asp-for="Nome" class="form-label"></label>
                                <input asp-for="Nome" class="form-control" readonly />
                            </div>
                            <div class="input-group input-group-outline mb-4">
                            <label asp-for="Descricao" class="form-label"></label>
                            <input asp-for="Descricao" class="form-control" readonly/>
                        </div>
                        </div>
                        <div class="col-12 mb-3">
                            <div class="input-group input-group-outline">
                                <label asp-for="Localizacao" class="form-label"></label>
                                <input asp-for="Localizacao" class="form-control" readonly>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-8 mb-3">
                                <div class="input-group input-group-outline">
                                    <label asp-for="LocalizacaoFoto" class="form-label"></label>
                                    <textarea asp-for="LocalizacaoFoto" class="form-control" rows="6" readonly></textarea>
                                </div>
                            </div>

                    <div class="mb-3">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Alterar</a>
                        <a asp-action="Index" class="btn btn-info">Voltar</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<style>
  .bg-gradient-warning {
    background: #F1C445 !important;  
  }
}
</style>